@model IEnumerable<MvcCar.Models.CarPurchase>

@{
    ViewData["Title"] = "Index";
}

<h1>Sales Log</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePaid)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>    
        <th>
            @Html.DisplayFor(modelItem => item.Customer.Surname), @Html.DisplayFor(modelItem => item.Customer.Name)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Car.Make) @Html.DisplayFor(modelItem => item.Car.Model)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.SalesPerson.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePaid)
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
        </td>
        </tr>
}
    </tbody>
</table>
